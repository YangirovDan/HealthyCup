html
    box-sizing: border-box;


*, *::after, *::before
    box-sizing: inherit;
    margin: 0;
    padding: 0;


/* это во первых родители.
пишем так, чтобы footer был внизу */
html,
body
    height: 100%;
    scroll-behavior: smooth

body
    font-family: 'Formular', sans-serif
    font-size 16px
    font-weight 400
    color: #111827
    

/* убирает точки возле ссылки */
ul
    list-style-type: none;


/* убирает подчёркивание и меняет цвет с ссылок */
a
    text-decoration: none;
    color: inherit;

button
    background-color #00bfff
    border: none
    cursor pointer
    border-radius: 4px
    color: #fff
    font-family: 'Formular', sans-serif
    font-size 16px
    font-weight 700

.header__bottom-wrapper
    position: sticky
    top 0

.back
    display none
    position: fixed
    top 0
    left 0
    width 100%
    height 100vh
    background-color: rgba(0, 0, 0, 0.3)
    z-index 10
    &--active
        display block

.body-wrapper
    overflow: hidden
    width 100%
    position relative

.container
    max-width: 1536px
    width 100%
    margin 0 auto

.header
    position relative
    z-index 100
    background-color #F9FAFB
    padding 24px 16px 0 24px
    &__wrapper
        flex-direction: column
        display flex
        gap 24px
    &__top
        display flex
        justify-content space-between
        align-items center
    &__logo 
        display flex
        align-items center
        gap 4px
    &__info
        display flex
        gap 12px
    &__text
        text-align right
        &--adaptive
            display none
            font-size 14px
    &__border
        border-right: 1px solid #A78BFA
    &__phone
        display flex
        flex-direction: column
        gap 4px
        &-text
            font-size 24px
            font-weight 300
    &__bottom
        display flex
        justify-content space-between
        align-items center
        &-wrapper
            display flex
            flex-direction: column
            align-items center
            z-index 20
            background-color #F9FAFB
            padding 24px 16px 24px 16px
    &__btn
        padding 10px 28px
    &__burger-btn
        display none
        position relative
        width 24px
        height 16px
        & span
            display block
            position absolute
            top: 6px
            width 24px
            height 4px
            background-color: #8B5CF6
            border-radius: 100px
            &:nth-child(1)
                transform: translateY(-6px)
            &:nth-child(3)
                transform: translateY(6px)
        
.logo
    &__title
        font-size 30px
        font-weight 900
        color: #111827

.phone
    font-size 36px
    font-weight 900
    white-space: nowrap
    &--footer
        font-size 36px
        font-weight 900
        white-space: nowrap

.menu
    &__list
        display flex
        gap 24px
    &__link
        font-size 16px
        font-weight 700
        //transition: color 0.3s ease
        &--footer
            color #fff
        &--active
            color: #8B5CF6
            border-bottom: 2px dotted #8B5CF6

@media (hover: hover)
    .menu__link
        color: #111827
        &--footer
            color: #fff
        &:hover
            color: #00bfff

.active
    color: #00bfff
    border-bottom: 2px dotted #00bfff

main
    background-color #E5E7EB

.section-title
    display flex
    justify-content center
    font-size 30px
    font-weight 900
    

.calc
    padding 72px 0
    scroll-margin-top: 100px
    &__wrapper
        display flex
        gap 24px
        padding 0 16px
    &__content
        display flex
        flex-direction: column
        gap 16px
    &__info
        display flex
        flex-direction: column
        gap 12px
        max-width 756px
    &__title
        font-size 36px
        font-weight 900
    &__text
        font-size 20px
    &__img img
        max-width 100%
    &__form
        max-width 756px
        width 100%
        background-color #F9FAFB
        border-radius: 16px
        padding 24px 130px
        display flex
        flex-direction: column
        align-items center
        gap 28px
        &-info  
            display flex
            flex-direction: column
            text-align center
            max-width 358px
            gap 18px
        &-title
            font-size 30px
            font-weight 700
        &-inputs
            display grid
            gap 24px
            grid-template-columns repeat(2, 1fr)
            width 100%
            & input
                height 48px
                padding 12px
                border: 2px solid #111827
                border-radius: 4px
                outline: none
                color: #9CA3AF
                width 100%
                font-size 16px
                &:focus
                    color #000
.form
    &__name
        grid-column 1 / 3
.send__form
    grid-column 1/3
    padding 12px 23px
    font-weight 700
    margin-top 4px

.advantage
    scroll-margin-top: 100px

.adver
    scroll-margin-top: 100px
    &__wrapper
        display grid
        grid-template-columns repeat(3, 1fr)
        gap 24px
.adv
    scroll-margin-top: 100px
    &__title
        padding-bottom 24px
    &__wrapper
        display grid
        grid-template-columns repeat(3, 1fr)
        gap 24px
    &__item
        display flex
        align-items center
        gap 12px
        padding 24px
    &__content
        display flex
        flex-direction: column
        gap 12px
        &-title
            font-size 24px
            font-weight 900
        &-text
            font-size 14px
.licence
    scroll-margin-top: 50px
    padding 72px 0 72px
    &__text
        display flex
        margin 0 auto
        max-width 756px
        &-wrapper
            display flex
            flex-direction: column
            gap 12px
            padding 0 16px 24px 16px
            text-align center
    &__content
        display grid
        grid-template-columns repeat(4, 1fr)
        text-align center
        gap 24px
        padding-bottom 36px
    &__item
        &-text
            font-size 18px
            font-weight 900
            line-height 24px
    &__btn
        display flex
        margin 0 auto
        padding 16px 28px
        border-radius: 12px

.feedback
    scroll-margin-top: 50px
    padding-bottom 72px
    & .container
        position relative
    &__title
        margin-bottom 32px

.container-slider
    max-width 1280px
    width 100%
    margin 0 auto

.swiper
    max-width 1276px
    width 100%
    margin 0 auto
    &__content
        position relative
    &-slide
        box-sizing: border-box
        max-width 626px
        width 100%
        height auto !important
        background-color #F9FAFB
        border-radius 16px
        padding 32px 32px
    &__item
        display flex
        flex-direction: column
        justify-content space-between
        height 100%
    &__text
        font-size 24px
        font-weight 700
        padding 0px 75px 175px 0px
    &__name
        font-size 24px
        font-weight 300
        color: #6B7280
    &-button
        display flex
        justify-content space-between
        padding 0 23px
        &-prev-un
            position absolute
            top 40%
            z-index 5
            left 23px
            cursor pointer
        &-next-un
            position absolute
            top 40%
            z-index 5
            right 23px
            cursor pointer
            
    /*&-button-
        &prev
            background-size: cover
            width 60px
            height 60px
            background-image url(../images/prevbtn.svg)*/
.quote
    position absolute
    right 18px
    bottom 8px

.form
    padding-bottom 72px
    &__title
        display flex
        text-align center
    &__wrapper
        display flex
        flex-direction: column
        background-color #F9FAFB
        padding 64px 0 64px 0
        margin 0 16px 0 16px
        border-radius 16px
        gap 32px
    &__content
        padding 0 519.5px 0 519.5px
        display flex
        flex-direction: column
        gap 20px
    &__inputs
        display grid
        grid-template-columns repeat(2, 1fr)
        gap 24px
        justify-content center
        & input
            padding 12px
            font-size 16px
            font-family Formular
            color #9CA3AF
            border: 2px solid var(--gray-900, #111827)
            border-radius 4px
            outline: none
            &:focus
                color #000
    &__textarea
        grid-row 3/10
        grid-column 1/3
        outline: none
        padding 12px
        font-size 16px
        font-family Formular
        color: #9CA3AF
        border: 2px solid var(--gray-900, #111827)
        border-radius 4px
        &:focus
            color #000
    &__btn
        padding 10px 28px
        width 100%

.footer
    padding 40px 192px
    background-color #111827
    &__wrapper
        display flex
        flex-direction: column
        gap 24px
    &__content
        display flex
        justify-content space-between
        align-items center
    &__logo
        display flex
        align-items center
        gap 4px
        &-wrapper
            display flex
            flex-direction: column
            gap 8px
        &-name
            color #fff
            font-size 24px
            font-weight 900
        &-text
            color: #fff
            font-size 12px
    &__phone
        display flex
        flex-direction: column
        gap 4px
        color: #fff
        &-text
            font-size 24px
            font-weight 300
    &__info
        display flex
        text-align center
        color: #4B5563

